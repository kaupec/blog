{# templates/blog/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}

    <h1>All articles from : {{ tagName }} </h1>
    {% for article in articles %}
        <div>
            <h2>{{ article.id }} /
                <a href="{{ path('blog_show', { 'slug': article.title|replace({ ' ': '-' })|lower }) }}">
                {{ article.title }}
                </a>
                    - Tag : {{ tagName }}</h2>
            <p>{{ article.content }}</p>
        </div>



    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>
{% endblock %}